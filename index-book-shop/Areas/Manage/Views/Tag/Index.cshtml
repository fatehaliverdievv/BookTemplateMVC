@model IEnumerable<Tag>
<div class="table-responsive">
 <table class="table">
   <thead>
     <tr>
       <th>Id</th>
       <th>Name</th>
     </tr>
   </thead>
   <tbody>
            @foreach (Tag item in Model)
            {
               <tr>
                 <td>@item.Id</td>
                 <td>@item.Name</td>
                 <td><a type="button" class="btn btn-dark" asp-area="Manage" asp-controller="Tag" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                 <td><a type="button" class="btn btn-success"  asp-area="Manage" asp-controller="Tag" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
               </tr>
            }
   </tbody>  
 </table>
</div>